<!DOCTYPE html>
<html>
<head>
<%= stylesheet_link_tag "new_user.css" %>
<title>Signin</title>        <div class="flash_container">
          <% if flash[:notice] %>
            <% flash[:notice].each do |note| %>
            <p id="notice"><%= note %></p>  
            <% end %>
          <% end %>
          <% if flash[:error] %>
            <% flash[:error].each do |note| %>
            <p id="notice"><%= note %></p>  
            <% end %>
          <% end %>  
        </div> 
</head>
<body>
  <div class="page_container"> 
    <div class="login_container">   
      <h1>Signin</h1>
        <form action = "/login/process_login" method = "post">
          <input class="form_line" type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
          <label class="form_line">Email Address</label>
          <input class="form_line" type="text" name="user[email]" >
          <label class="form_line" >Password</label>
          <input class="form_line" type="password" name="user[password]" > 
          <p></p> 
          <input class="form_line" type = "submit" value = "Log In">
        </form>
    </div>
    <div class="reg_container"> 
      <h1>Register</h1>
        <form action = "/login/process_registration" method = "post">
          <input class="form_line" type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
          <label class="form_line">Name</label>
          <input class="form_line" type = "text" name = "user[name]" >
          <label class="form_line">Alias</label>
          <input class="form_line" type = "text" name = "user[alias]" >          
          <label class="form_line">Email Address</label>
          <input class="form_line" type="text" name="user[email]" >
          <label class="form_line">Password</label>
          <input class="form_line" type="password" name="user[password]" >  
          <label class="form_line">Password Confirmation</label>
          <input class="form_line" type="password" name="user[password_confirmation]" > 
          <p></p>
          <input class="form_line" type = "submit" value = "Join">
        </form>
        <p></p>
        <p></p>
        <p></p>
    </div>
 
  </div> 
</body>
</html>
